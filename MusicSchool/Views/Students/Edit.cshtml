@model StudentModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Surname" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Surname" class="form-control" />
					<span asp-validation-for="Surname" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Birthday" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Birthday" class="form-control" id="datepicker" type="text" asp-format="{0:MM/dd/yyyy}" />
					<span asp-validation-for="Birthday" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Gender" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Gender" type="radio" value="@((int)Gender.Woman)" checked /> @Gender.Woman
                    &nbsp;
                    <input asp-for="Gender" type="radio" value="@((int)Gender.Man)" /> @Gender.Man
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ParentName" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="ParentName" class="form-control" />
					<span asp-validation-for="ParentName" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="ParentSurname" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="ParentSurname" class="form-control" />
					<span asp-validation-for="ParentSurname" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="TakenLessonCount" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="TakenLessonCount" class="form-control" />
					<span asp-validation-for="TakenLessonCount" class="text-danger"></span>
				</div>
            </div>
			<div class="row mb-3">
				<label asp-for="RegistrationDate" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="RegistrationDate" class="form-control" id="datepicker1" type="text" asp-format="{0:MM/dd/yyyy}" />
					<span asp-validation-for="RegistrationDate" class="text-danger"></span>
				</div>
			</div>
            <div class="row mb-3">
                <label asp-for="StudentContact.CountryId" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <select asp-for="StudentContact.CountryId" class="form-select" asp-items="ViewBag.Countries" id="countries">
                        <option value="">-- Select Country --</option>
                    </select>
                    <span asp-validation-for="StudentContact.CountryId" class="text-danger countriesmessage"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="StudentContact.CityId" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <select asp-for="StudentContact.CityId" class="form-select cities" asp-items="ViewBag.Cities">
                        <option value="">-- Select City --</option>
                    </select>
                    <span asp-validation-for="StudentContact.CityId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="StudentContact.Address" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="StudentContact.Address" class="form-control" type="text" />
                    <span asp-validation-for="StudentContact.Address" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="StudentContact.Email" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="StudentContact.Email" class="form-control" type="email" />
                    <span asp-validation-for="StudentContact.Email" class="text-danger"></span>
                </div>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
	<link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
	<script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
	<script>
		$(function () {
            $('#datepicker,#datepicker1').datepicker({
                dateFormat: "yy-mm-dd",
                todayBtn: "linked",
                //language: "tr",
                orientation: "top auto",
                autoclose: true,
                todayHighlight: true,
                immediateUpdates: true,
                todayBtn: true,
                todayHighlight: true
            }).datepicker("setDate", "0");

        });
	</script>
    <script>
        $(function () {
            $("#countries").change(function () {
                var selectedCountryId = $("#countries").val();
                $(".cities").empty();
                if (selectedCountryId == "") {
                    $(".countriesmessage").text("Please select a country...");
                    $(".cities").append('<option value="">-- Select Country --</option>');
                } else {
                   
                    $.getJSON("/Cities/Index",
                        { countryId: selectedCountryId }, 
                        function (cities) { 
                            $(".cities").append('<option value="">-- Select City --</option>');
                            for (const city of cities) {
                                $(".cities").append('<option value="' + city.id + '">' + city.name + '</option>');
                            }
                        }
                    );
                }
            });
        });
    </script>
}




