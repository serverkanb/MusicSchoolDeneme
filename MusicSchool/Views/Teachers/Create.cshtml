@model TeacherModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Add Teacher";
}

<h2>@ViewData["Title"]</h2>
<br />

<h4>Teacher</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            @if (ViewBag.Message is not null)
            {
                <p class="text-danger">@ViewBag.Message</p>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Surname" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>




            <div class="row mb-3">
                <label asp-for="InstrumentId" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <select asp-for="InstrumentId" class="form-select" asp-items="ViewBag.Instruments"><option value="">-- Select --</option></select>
                    
                    <span asp-validation-for="InstrumentId" class="text-danger"></span>
                </div>
            </div>       
            <div class="row mb-3">
                <label asp-for="Birthday" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="Birthday" class="form-control" id="datepicker" type="text" asp-format="{0:MM/dd/yyyy}" />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>
            </div> <div class="row mb-3">
                <label asp-for="RegistrationDate" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="RegistrationDate" class="form-control" id="datepicker1" type="text" asp-format="{0:MM/dd/yyyy}" />
                    <span asp-validation-for="RegistrationDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="TeacherContact.Gender" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="TeacherContact.Gender" type="radio" value="@((int)Gender.Woman)" checked /> @Gender.Woman
                    &nbsp;
                    <input asp-for="TeacherContact.Gender" type="radio" value="@((int)Gender.Man)" /> @Gender.Man
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="TeacherContact.Address" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="TeacherContact.Address" class="form-control" type="text" />
                    <span asp-validation-for="TeacherContact.Address" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="TeacherContact.Email" class="col-2 col-form-label"></label>
                <div class="col-5">
                    <input asp-for="TeacherContact.Email" class="form-control" type="email" />
                    <span asp-validation-for="TeacherContact.Email" class="text-danger"></span>
                </div>
            </div>      
            <div class="row mb-3">
                <div class="offset-2 col-5">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    &nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
                    &nbsp;&nbsp;
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts{
        <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker3.min.css" rel="stylesheet" />
        <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
        <script>
            $(function () {
                $('#datepicker,#datepicker1').datepicker({
                    dateFormat: "yy-mm-dd",
                    todayBtn: "linked",
                    //language: "tr",
                    orientation: "top auto",
                    autoclose: true,
                    todayHighlight: true,
                    immediateUpdates: true,
                    todayBtn: true,
                    todayHighlight: true
                }).datepicker("setDate", "0");

            });
        </script>
}




