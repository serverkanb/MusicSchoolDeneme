<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - | MusicSchool |</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MusicSchool.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> MusicSchool </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Lessons" asp-action="Index"><i class="bi bi-music-note-beamed"></i> Lessons</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Students" asp-action="Index">Students</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Teachers" asp-action="Index">Teachers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Instruments" asp-action="Index">Instruments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Classrooms" asp-action="Index">Classrooms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="DB" asp-controller="Home" asp-action="Index">Database Seed</a>
                        </li>
                    </ul>

                    <div class="navbar-text">
                        <ul class="navbar-nav me-auto">

                            @if (!User.Identity.IsAuthenticated)
                            {

                                <li class="nav-item">
                                    <a class="nav-link text-info" asp-area="Account" asp-controller="User" asp-action="Register">Register</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-info" asp-area="Account" asp-controller="User" asp-action="Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-info" asp-area="" asp-controller="MusicSchoolContact" asp-action="Contact">Contact</a>
                                </li>
                            }
                            else
                            {
                                if (User.IsInRole("User"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-info" asp-area="" asp-controller="Cart" asp-action="GetCart"><i class="bi bi-cart4"></i></a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <span class="badge bg-info text-black" style="margin-top: 11px;"><i class="bi bi-person"></i>@User.Identity.Name</span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-info" asp-area="Account" asp-controller="User" asp-action="Logout">Logout</a>
                                </li>
                            }

                        </ul>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @* <div class="container">
        &copy; 2023 - MusicSchool - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>*@
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
