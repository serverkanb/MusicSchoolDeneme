@model IEnumerable<CartItemGroupByModel>
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Cart";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="ClearCart">Clear Cart</a>
</p>

@if (TempData["Message"] is not null)
{
        <p class="text-primary">@TempData["Message"]</p>

}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InstrumentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalUnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCount)
            </th>
           <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                    <tr>
                        <td>
                    @Html.DisplayFor(modelItem => item.InstrumentName)
                        </td>
                        <td>
                    @Html.DisplayFor(modelItem => item.TotalUnitPrice)
                        </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.TotalCount)
                    </td>
                        <td>
                    <a asp-action="DeleteFromCart" asp-route-InstrumentId="@item.InstrumentId" asp-route-userId="@item.UserId">Delete from Cart</a>
                        </td>
                    </tr>
        }
        <tr>
            <td><b></b>Total</td>
            <td>
                @Model.Sum(m=>m.TotalUnitPriceValue).ToString("C2")
            </td>
            <td>
                @Model.Sum(m=>m.TotalCountValue) pieces
            </td>
            <td></td>
        </tr>
    </tbody>
</table>
